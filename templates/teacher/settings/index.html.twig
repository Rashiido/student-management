{% extends 'teacher/base.html.twig' %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap');

        .settings-wrapper {
            font-family: "Cairo", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .settings-hero {
            background: linear-gradient(135deg, #0284C7 0%, #f97316 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .settings-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .settings-hero::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .settings-header {
            position: relative;
            z-index: 1;
        }

        .settings-header h2 {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .settings-header p {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-weight: 400;
        }

        .alert {
            border-radius: 12px;
            padding: 1rem 1.25rem;
            margin-bottom: 1rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .alert-success {
            background: #dcfce7;
            color: #166534;
            border: 1px solid #bbf7d0;
        }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .settings-grid {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1.5rem;
        }

        .settings-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .settings-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .settings-card-header {
            padding: 1.5rem;
            border-bottom: 2px solid #e2e8f0;
            background: #f8fafc;
        }

        .settings-card-header h3 {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .settings-card-body {
            padding: 1.5rem;
        }

        .info-list {
            display: grid;
            gap: 1rem;
        }

        .info-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            padding: 0.85rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            background: #ffffff;
        }

        .info-label {
            color: #64748b;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 600;
        }

        .info-value {
            font-weight: 700;
            color: #1f2937;
        }

        .form-label {
            font-weight: 600;
            color: #475569;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.2s;
            background: #ffffff;
            width: 100%;
        }

        .form-control:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 0 4px rgba(6, 182, 212, 0.1);
            outline: none;
        }

        .input-with-toggle {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            color: #64748b;
            cursor: pointer;
            padding: 0.25rem;
            font-size: 1rem;
        }

        .toggle-password:hover {
            color: #0ea5e9;
        }

        .password-rules {
            margin-top: 0.75rem;
            font-size: 0.85rem;
            color: #64748b;
            display: grid;
            gap: 0.25rem;
        }

        .strength-meter {
            margin-top: 0.75rem;
        }

        .strength-bar {
            height: 8px;
            border-radius: 999px;
            background: #e2e8f0;
            overflow: hidden;
        }

        .strength-bar-fill {
            height: 100%;
            width: 0%;
            background: #ef4444;
            transition: width 0.2s ease, background 0.2s ease;
        }

        .strength-text {
            margin-top: 0.5rem;
            font-size: 0.85rem;
            font-weight: 600;
            color: #64748b;
        }

        .strength-weak .strength-bar-fill {
            width: 33%;
            background: #ef4444;
        }

        .strength-medium .strength-bar-fill {
            width: 66%;
            background: #f59e0b;
        }

        .strength-strong .strength-bar-fill {
            width: 100%;
            background: #10b981;
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            margin-top: 1.5rem;
        }

        .btn-primary {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            border: none;
            color: #ffffff;
            font-weight: 700;
            font-size: 0.95rem;
            transition: all 0.2s;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(6, 182, 212, 0.4);
            background: #0891b2;
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        @media (max-width: 900px) {
            .settings-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .settings-wrapper {
                padding: 1rem;
            }

            .settings-hero {
                padding: 1.5rem;
            }

            .settings-header h2 {
                font-size: 1.75rem;
            }

            .info-row {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>

    <div class="settings-wrapper">
        <div class="settings-hero">
            <div class="settings-header">
                <h2>
                    <i class="bi bi-gear-fill"></i>
                    Parametres
                </h2>
                <p>Gerez vos informations et mettez a jour votre mot de passe</p>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i>
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                <i class="bi bi-exclamation-triangle-fill"></i>
                {{ message }}
            </div>
        {% endfor %}

        <div class="settings-grid">
            <div class="settings-card">
                <div class="settings-card-header">
                    <h3>
                        <i class="bi bi-person-badge"></i>
                        Informations du compte
                    </h3>
                </div>
                <div class="settings-card-body">
                    <div class="info-list">
                        <div class="info-row">
                            <div class="info-label">Nom</div>
                            <div class="info-value">{{ teacher.firstName }} {{ teacher.lastName }}</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Utilisateur</div>
                            <div class="info-value">{{ user.username }}</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Telephone</div>
                            <div class="info-value">{{ teacher.phone ?: '-' }}</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Ecole</div>
                            <div class="info-value">{{ teacher.school.name }}</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Classes</div>
                            <div class="info-value">{{ teacher.studentGroups|length }}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="settings-card">
                <div class="settings-card-header">
                    <h3>
                        <i class="bi bi-shield-lock"></i>
                        Modifier le mot de passe
                    </h3>
                </div>
                <div class="settings-card-body">
                    <form method="post" action="{{ path('teacher_settings') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('teacher_password_change') }}">
                        <div class="mb-4">
                            <label class="form-label" for="current_password">Mot de passe actuel</label>
                            <div class="input-with-toggle">
                                <input class="form-control" type="password" id="current_password" name="current_password" required autocomplete="current-password">
                                <button type="button" class="toggle-password" onclick="togglePasswordVisibility('current_password', this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="new_password">Nouveau mot de passe</label>
                            <div class="input-with-toggle">
                                <input class="form-control" type="password" id="new_password" name="new_password" required autocomplete="new-password">
                                <button type="button" class="toggle-password" onclick="togglePasswordVisibility('new_password', this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="strength-meter" id="strengthMeter">
                                <div class="strength-bar">
                                    <div class="strength-bar-fill"></div>
                                </div>
                                <div class="strength-text" id="strengthText">Force du mot de passe: -</div>
                            </div>
                            <div class="password-rules">
                                <span>Regles: 8 caracteres minimum</span>
                                <span>Inclure 1 majuscule, 1 minuscule, 1 chiffre</span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="confirm_password">Confirmer le mot de passe</label>
                            <div class="input-with-toggle">
                                <input class="form-control" type="password" id="confirm_password" name="confirm_password" required autocomplete="new-password">
                                <button type="button" class="toggle-password" onclick="togglePasswordVisibility('confirm_password', this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn-primary">
                                <i class="bi bi-check-circle"></i>
                                Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="settings-card">
                <div class="settings-card-header">
                    <h3>
                        <i class="bi bi-telephone"></i>
                        Modifier le telephone
                    </h3>
                </div>
                <div class="settings-card-body">
                    <form method="post" action="{{ path('teacher_settings') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('teacher_phone_update') }}">
                        <input type="hidden" name="form_type" value="phone_update">
                        <div class="mb-4">
                            <label class="form-label" for="phone">Telephone</label>
                            <input class="form-control" type="text" id="phone" name="phone" value="{{ teacher.phone ?? '' }}" placeholder="Ex: 0612345678" inputmode="numeric" pattern="0[67][0-9]{8}" maxlength="10">
                            <div class="password-rules">Format: 06 ou 07 suivi de 8 chiffres. Laissez vide pour supprimer le numero.</div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn-primary">
                                <i class="bi bi-check-circle"></i>
                                Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility(fieldId, button) {
            const input = document.getElementById(fieldId);
            const icon = button.querySelector('i');
            if (!input || !icon) {
                return;
            }

            const isPassword = input.type === 'password';
            input.type = isPassword ? 'text' : 'password';
            icon.classList.toggle('bi-eye', !isPassword);
            icon.classList.toggle('bi-eye-slash', isPassword);
        }

        function evaluatePasswordStrength(value) {
            const lengthOk = value.length >= 8;
            const hasUpper = /[A-Z]/.test(value);
            const hasLower = /[a-z]/.test(value);
            const hasDigit = /\d/.test(value);
            const score = [lengthOk, hasUpper, hasLower, hasDigit].filter(Boolean).length;

            if (value.length === 0) {
                return { level: '', label: 'Force du mot de passe: -' };
            }
            if (score <= 2) {
                return { level: 'strength-weak', label: 'Force du mot de passe: Faible' };
            }
            if (score === 3) {
                return { level: 'strength-medium', label: 'Force du mot de passe: Moyen' };
            }
            return { level: 'strength-strong', label: 'Force du mot de passe: Fort' };
        }

        document.addEventListener('DOMContentLoaded', function () {
            const newPasswordInput = document.getElementById('new_password');
            const meter = document.getElementById('strengthMeter');
            const text = document.getElementById('strengthText');

            if (!newPasswordInput || !meter || !text) {
                return;
            }

            newPasswordInput.addEventListener('input', function () {
                const result = evaluatePasswordStrength(newPasswordInput.value);
                meter.classList.remove('strength-weak', 'strength-medium', 'strength-strong');
                if (result.level) {
                    meter.classList.add(result.level);
                }
                text.textContent = result.label;
            });
        });
    </script>
{% endblock %}
