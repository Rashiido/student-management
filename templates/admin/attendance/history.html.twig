{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <h1 style="font-size: 2rem; font-weight: 700;">
        <i class="fas fa-history"></i> Historique des Présences
    </h1>
    <p style="color: #64748b; margin-top: 0.5rem;">
        Consultez l'historique des présences par école, groupe et date
    </p>
{% endblock %}

{% block main %}
    <style>
        .history-container {
            max-width: 1800px;
            margin: 0 auto;
        }

        /* Filters Section */
        .filter-section {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .filter-item {
            display: flex;
            flex-direction: column;
        }

        .filter-label {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .filter-select, .filter-input {
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.2s;
            background: white;
            width: 100%;
        }

        .filter-select:focus, .filter-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .filter-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 1rem;
            padding-top: 1.5rem;
            border-top: 1px solid #e2e8f0;
        }

        /* Subject Sections */
        .subject-section {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .subject-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .subject-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
        }

        .subject-icon.math { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
        .subject-icon.french { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
        .subject-icon.english { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); }
        .subject-icon.science { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }
        .subject-icon.default { background: linear-gradient(135deg, #64748b 0%, #475569 100%); }

        .subject-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            flex: 1;
        }

        .subject-stats {
            display: flex;
            gap: 1.5rem;
        }

        .subject-stat {
            text-align: center;
        }

        .subject-stat-number {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .subject-stat-label {
            color: #64748b;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        /* Table Styles */
        .history-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1.5rem;
        }

        .history-table th {
            background: #f8fafc;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #475569;
            border-bottom: 2px solid #e2e8f0;
        }

        .history-table td {
            padding: 1rem;
            border-bottom: 1px solid #e2e8f0;
            vertical-align: middle;
        }

        .history-table tr:hover {
            background: #f8fafc;
        }

        /* Status Badges */
        .status-badge {
            display: inline-block;
            padding: 0.375rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            text-align: center;
            min-width: 80px;
        }

        .status-badge.present {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.absent {
            background: #fee2e2;
            color: #991b1b;
        }

        .status-badge.late {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.excused {
            background: #dbeafe;
            color: #1e40af;
        }

        .status-badge.no-data {
            background: #f1f5f9;
            color: #64748b;
            border: 1px dashed #cbd5e1;
        }

        /* Empty State for Subject */
        .subject-empty {
            text-align: center;
            padding: 3rem;
            color: #64748b;
            background: #f8fafc;
            border-radius: 8px;
            margin: 1rem 0;
        }

        .subject-empty i {
            font-size: 3rem;
            opacity: 0.3;
            margin-bottom: 1rem;
        }

        /* Loading State */
        .loading {
            text-align: center;
            padding: 3rem;
            color: #64748b;
        }

        .loading-spinner {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #3b82f6;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .empty-state i {
            font-size: 4rem;
            opacity: 0.3;
            margin-bottom: 1rem;
        }

        /* No Attendance State */
        .no-attendance-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .no-attendance-state .subject-icon {
            margin: 0 auto 1.5rem;
            width: 80px;
            height: 80px;
            font-size: 2.5rem;
        }

        /* Buttons */
        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            white-space: nowrap;
        }

        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        }

        .btn-secondary {
            background: #e2e8f0;
            color: #475569;
        }

        .btn-secondary:hover {
            background: #cbd5e1;
        }

        .btn-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .btn-success:hover {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
        }

        /* Results Header */
        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .results-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
        }

        .results-meta {
            color: #64748b;
            font-size: 0.95rem;
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .filter-grid {
                grid-template-columns: 1fr;
            }

            .subject-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .subject-stats {
                width: 100%;
                justify-content: space-between;
            }

            .results-header {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .history-table {
                display: block;
                overflow-x: auto;
            }

            .results-meta {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }
        }
    </style>

    <div class="history-container">
        <!-- Filters Section -->
        <div class="filter-section">
            <div class="filter-grid">
                <!-- School Filter -->
                <div class="filter-item">
                    <label class="filter-label">
                        <i class="fas fa-school"></i>
                        École
                    </label>
                    <select id="schoolSelect" class="filter-select" onchange="loadGroups()">
                        <option value="">-- Sélectionner une école --</option>
                        {% for school in schools %}
                            <option value="{{ school.id }}">{{ school.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Group Filter -->
                <div class="filter-item">
                    <label class="filter-label">
                        <i class="fas fa-users"></i>
                        Groupe
                    </label>
                    <select id="groupSelect" class="filter-select" disabled onchange="loadDates()">
                        <option value="">-- Sélectionner un groupe --</option>
                    </select>
                </div>

                <!-- Date Filter -->
                <div class="filter-item">
                    <label class="filter-label">
                        <i class="fas fa-calendar"></i>
                        Date
                    </label>
                    <select id="dateSelect" class="filter-select" disabled onchange="updateResults()">
                        <option value="">-- Sélectionner une date --</option>
                    </select>
                </div>
            </div>

            <div class="filter-actions">
                <button class="btn btn-secondary" onclick="resetFilters()">
                    <i class="fas fa-redo"></i>
                    Réinitialiser
                </button>
                <button class="btn btn-success" onclick="exportHistory()">
                    <i class="fas fa-file-excel"></i>
                    Exporter Excel
                </button>
                <button class="btn btn-primary" onclick="loadHistory()" id="searchBtn" disabled>
                    <i class="fas fa-search"></i>
                    Voir les présences
                </button>
            </div>
        </div>

        <!-- Results Section -->
        <div id="resultsSection" style="display: none;">
            <div class="results-header">
                <div>
                    <div class="results-title" id="resultsTitle">Présences du groupe</div>
                    <div class="results-meta" id="resultsMeta"></div>
                </div>
                <div>
                    <button class="btn btn-secondary" onclick="refreshResults()">
                        <i class="fas fa-sync-alt"></i>
                        Actualiser
                    </button>
                </div>
            </div>

            <!-- Results will be loaded here -->
            <div id="resultsContainer"></div>
        </div>

        <!-- Initial State -->
        <div id="initialState" class="empty-state">
            <i class="fas fa-history"></i>
            <h3>Historique des présences</h3>
            <p>Sélectionnez une école, un groupe et une date pour voir les présences</p>
        </div>
    </div>

    <script>
        let currentPage = 1;
        let currentLimit = 20;
        let currentFilters = {};
        let groupsCache = {};
        let datesCache = {};
        let allStudents = [];
        let subjectsLoaded = 0;
        let totalSubjectsToCheck = 0;
        let subjectsWithData = [];
        let subjectsToCheck = ['Math', 'French', 'English', 'Science']; // All possible subjects

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            disableFilters(['group', 'date']);
        });

        // Helper function to disable/enable filters
        function disableFilters(filters) {
            filters.forEach(filter => {
                const element = document.getElementById(filter + 'Select');
                if (element) {
                    element.disabled = true;
                    element.value = '';
                }
            });
        }

        function enableFilter(filter) {
            const element = document.getElementById(filter + 'Select');
            if (element) {
                element.disabled = false;
            }
        }

        // Load groups when school is selected
        function loadGroups() {
            const schoolId = document.getElementById('schoolSelect').value;
            const groupSelect = document.getElementById('groupSelect');

            if (!schoolId) {
                disableFilters(['group', 'date']);
                groupSelect.innerHTML = '<option value="">-- Sélectionner un groupe --</option>';
                groupsCache = {};
                datesCache = {};
                document.getElementById('searchBtn').disabled = true;
                return;
            }

            // Check cache first
            if (groupsCache[schoolId]) {
                populateGroups(groupsCache[schoolId]);
                return;
            }

            disableFilters(['group', 'date']);
            groupSelect.innerHTML = '<option value="">Chargement...</option>';

            fetch(`/admin/api/groups-by-school/${schoolId}`)
                .then(response => response.json())
                .then(groups => {
                    groupsCache[schoolId] = groups;
                    populateGroups(groups);
                })
                .catch(error => {
                    console.error('Error loading groups:', error);
                    groupSelect.innerHTML = '<option value="">Erreur de chargement</option>';
                });
        }

        function populateGroups(groups) {
            const groupSelect = document.getElementById('groupSelect');
            groupSelect.innerHTML = '<option value="">-- Sélectionner un groupe --</option>';

            if (groups.length === 0) {
                groupSelect.innerHTML = '<option value="">Aucun groupe disponible</option>';
                disableFilters(['date']);
                return;
            }

            groups.forEach(group => {
                const option = document.createElement('option');
                option.value = group.id;
                option.textContent = group.name + (group.teacher ? ` (${group.teacher})` : '');
                groupSelect.appendChild(option);
            });

            enableFilter('group');
        }

        // Load dates when group is selected
        function loadDates() {
            const schoolId = document.getElementById('schoolSelect').value;
            const groupId = document.getElementById('groupSelect').value;
            const dateSelect = document.getElementById('dateSelect');

            if (!schoolId || !groupId) {
                disableFilters(['date']);
                dateSelect.innerHTML = '<option value="">-- Sélectionner une date --</option>';
                datesCache = {};
                document.getElementById('searchBtn').disabled = true;
                return;
            }

            const cacheKey = `${schoolId}_${groupId}`;

            // Check cache first
            if (datesCache[cacheKey]) {
                populateDates(datesCache[cacheKey]);
                return;
            }

            disableFilters(['date']);
            dateSelect.innerHTML = '<option value="">Chargement...</option>';
            document.getElementById('searchBtn').disabled = true;

            fetch(`/admin/api/available-dates?schoolId=${schoolId}&groupId=${groupId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        datesCache[cacheKey] = data.dates;
                        populateDates(data.dates);
                    } else {
                        dateSelect.innerHTML = '<option value="">Erreur de chargement</option>';
                    }
                })
                .catch(error => {
                    console.error('Error loading dates:', error);
                    dateSelect.innerHTML = '<option value="">Erreur de chargement</option>';
                });
        }

        function populateDates(dates) {
            const dateSelect = document.getElementById('dateSelect');
            dateSelect.innerHTML = '<option value="">-- Sélectionner une date --</option>';

            if (dates.length === 0) {
                dateSelect.innerHTML = '<option value="">Aucune date disponible</option>';
                return;
            }

            dates.forEach(date => {
                const option = document.createElement('option');
                option.value = date.value;
                option.textContent = date.label;
                option.title = date.full;
                dateSelect.appendChild(option);
            });

            enableFilter('date');
        }

        // Update results when filters change
        function updateResults() {
            const schoolId = document.getElementById('schoolSelect').value;
            const groupId = document.getElementById('groupSelect').value;
            const date = document.getElementById('dateSelect').value;
            const searchBtn = document.getElementById('searchBtn');

            searchBtn.disabled = !(schoolId && groupId && date);
        }

        // Hide loading spinner
        function hideLoadingSpinner() {
            const loadingElement = document.getElementById('loadingSpinner');
            if (loadingElement) {
                loadingElement.style.display = 'none';
            }
        }

        // Remove loading spinner completely
        function removeLoadingSpinner() {
            const loadingElement = document.getElementById('loadingSpinner');
            if (loadingElement && loadingElement.parentNode) {
                loadingElement.parentNode.removeChild(loadingElement);
            }
        }

        // Reset subject counter
        function resetSubjectCounter() {
            subjectsLoaded = 0;
            totalSubjectsToCheck = 0;
            subjectsWithData = [];
        }

        // Load history data
        function loadHistory() {
            const schoolId = document.getElementById('schoolSelect').value;
            const groupId = document.getElementById('groupSelect').value;
            const date = document.getElementById('dateSelect').value;

            if (!schoolId || !groupId || !date) {
                alert('Veuillez sélectionner une école, un groupe et une date');
                return;
            }

            // Get group name for display
            const groupName = document.getElementById('groupSelect').selectedOptions[0].text;
            const dateLabel = document.getElementById('dateSelect').selectedOptions[0].text;

            // Update results title
            document.getElementById('resultsTitle').textContent = `Présences du groupe ${groupName}`;
            document.getElementById('resultsMeta').innerHTML = `
                <span><i class="fas fa-calendar"></i> ${dateLabel}</span>
                <span><i class="fas fa-clock"></i> Vérification des présences...</span>
            `;

            // Show loading and hide initial state
            document.getElementById('initialState').style.display = 'none';
            document.getElementById('resultsSection').style.display = 'block';
            document.getElementById('resultsContainer').innerHTML = `
                <div class="loading" id="loadingSpinner">
                    <i class="fas fa-spinner fa-spin loading-spinner"></i>
                    <p>Chargement des présences...</p>
                </div>
            `;

            // Reset and clear
            resetSubjectCounter();
            allStudents = [];

            // First, get all students in the group
            fetch(`/admin/api/students-by-group/${groupId}?schoolId=${schoolId}`)
                .then(response => response.json())
                .then(studentsData => {
                    if (studentsData.error) {
                        throw new Error(studentsData.error);
                    }

                    allStudents = studentsData.students;

                    // Check available subjects first (API approach)
                    checkAvailableSubjects(schoolId, groupId, date, groupName, dateLabel);
                })
                .catch(error => {
                    console.error('Error loading students:', error);
                    removeLoadingSpinner();
                    showErrorState('Erreur lors du chargement des étudiants', error.message);
                });
        }

        // Check which subjects have attendance data
        function checkAvailableSubjects(schoolId, groupId, date, groupName, dateLabel) {
            // Try the new API endpoint first
            fetch(`/admin/api/available-subjects?schoolId=${schoolId}&groupId=${groupId}&date=${date}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.subjects && data.subjects.length > 0) {
                        // Load only subjects that have data
                        totalSubjectsToCheck = data.subjects.length;
                        data.subjects.forEach(subject => {
                            loadAttendanceBySubject(subject, schoolId, groupId, date, groupName, dateLabel);
                        });
                    } else {
                        // No subjects found - show empty state
                        showNoAttendanceFound(groupName, dateLabel);
                    }
                })
                .catch(error => {
                    console.error('Error checking available subjects:', error);
                    // Fallback to checking all subjects
                    totalSubjectsToCheck = subjectsToCheck.length;
                    subjectsToCheck.forEach(subject => {
                        loadAttendanceBySubject(subject, schoolId, groupId, date, groupName, dateLabel);
                    });

                    // Set timeout to check if any subjects loaded
                    setTimeout(() => {
                        if (subjectsWithData.length === 0 && subjectsLoaded >= totalSubjectsToCheck) {
                            showNoAttendanceFound(groupName, dateLabel);
                        }
                    }, 3000);
                });
        }

        // Load attendance for a specific subject
        function loadAttendanceBySubject(subject, schoolId, groupId, date, groupName, dateLabel) {
            // Build filters for this subject
            const filters = {
                schoolId: schoolId,
                groupId: groupId,
                date: date,
                subject: subject,
                page: 1,
                limit: 100
            };

            const queryParams = new URLSearchParams();
            Object.entries(filters).forEach(([key, value]) => {
                if (value !== null && value !== '') {
                    queryParams.append(key, value);
                }
            });

            fetch(`/admin/api/attendance-history?${queryParams}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data && data.data.length > 0) {
                        subjectsWithData.push(subject);
                        displaySubjectResults(subject, data.data, groupName, dateLabel);
                    }

                    subjectsLoaded++;
                    checkAllSubjectsLoaded(groupName, dateLabel);
                })
                .catch(error => {
                    console.error(`Error loading ${subject} attendance:`, error);
                    subjectsLoaded++;
                    checkAllSubjectsLoaded(groupName, dateLabel);
                });
        }

        // Check if all subjects are loaded
        function checkAllSubjectsLoaded(groupName, dateLabel) {
            if (subjectsLoaded >= totalSubjectsToCheck) {
                removeLoadingSpinner();

                if (subjectsWithData.length === 0) {
                    // No subjects had data
                    showNoAttendanceFound(groupName, dateLabel);
                } else {
                    // Some subjects had data, update meta info
                    updateMetaInfo(groupName, dateLabel);
                }
            }
        }

        // Display results for a subject
        function displaySubjectResults(subject, attendanceData, groupName, dateLabel) {
            const resultsContainer = document.getElementById('resultsContainer');

            // Make sure we don't duplicate content
            const existingSubject = document.getElementById(`subject-${subject}`);
            if (existingSubject) {
                resultsContainer.removeChild(existingSubject);
            }

            // Create attendance map for quick lookup
            const attendanceMap = {};
            attendanceData.forEach(item => {
                if (item.student && item.student.id) {
                    attendanceMap[item.student.id] = {
                        status: item.status,
                        statusLabel: item.statusLabel,
                        timeSlot: item.schedule ? item.schedule.timeSlot : '--:-- - --:--'
                    };
                }
            });

            // Calculate stats
            const stats = {
                present: 0,
                absent: 0,
                late: 0,
                excused: 0,
                noData: 0
            };

            allStudents.forEach(student => {
                if (attendanceMap[student.id]) {
                    const status = attendanceMap[student.id].status;
                    if (stats[status] !== undefined) {
                        stats[status]++;
                    }
                } else {
                    stats.noData++;
                }
            });

            // Get subject display name and icon
            const subjectInfo = getSubjectInfo(subject);

            // Create subject section
            const subjectSection = document.createElement('div');
            subjectSection.className = 'subject-section';
            subjectSection.id = `subject-${subject}`;
            subjectSection.innerHTML = `
                <div class="subject-header">
                    <div class="subject-icon ${subjectInfo.iconClass}">
                        <i class="${subjectInfo.icon}"></i>
                    </div>
                    <div class="subject-title">${subjectInfo.displayName}</div>
                    <div class="subject-stats">
                        <div class="subject-stat">
                            <div class="subject-stat-number">${stats.present}</div>
                            <div class="subject-stat-label">Présents</div>
                        </div>
                        <div class="subject-stat">
                            <div class="subject-stat-number">${stats.absent}</div>
                            <div class="subject-stat-label">Absents</div>
                        </div>
                        <div class="subject-stat">
                            <div class="subject-stat-number">${stats.late}</div>
                            <div class="subject-stat-label">Retards</div>
                        </div>
                        <div class="subject-stat">
                            <div class="subject-stat-number">${stats.excused}</div>
                            <div class="subject-stat-label">Excusés</div>
                        </div>
                    </div>
                </div>
            `;

            // Create table
            if (allStudents.length > 0) {
                let tableHTML = `
                    <table class="history-table">
                        <thead>
                            <tr>
                                <th>Élève</th>
                                <th>Statut</th>
                                <th>Horaire</th>
                            </tr>
                        </thead>
                        <tbody>
                `;

                allStudents.forEach(student => {
                    const attendance = attendanceMap[student.id];
                    const status = attendance ? attendance.status : 'no-data';
                    const statusLabel = attendance ? attendance.statusLabel : 'Non enregistré';
                    const timeSlot = attendance ? attendance.timeSlot : '--:-- - --:--';

                    tableHTML += `
                        <tr>
                            <td>${student.firstName} ${student.lastName}</td>
                            <td>
                                <span class="status-badge ${status}">${statusLabel}</span>
                            </td>
                            <td>${timeSlot}</td>
                        </tr>
                    `;
                });

                tableHTML += `
                        </tbody>
                    </table>
                `;

                subjectSection.innerHTML += tableHTML;
            } else {
                subjectSection.innerHTML += `
                    <div class="subject-empty">
                        <i class="fas fa-users-slash"></i>
                        <h3>Aucun élève dans ce groupe</h3>
                    </div>
                `;
            }

            // Add to results container, but not over the loading spinner
            const loadingSpinner = document.getElementById('loadingSpinner');
            if (loadingSpinner && resultsContainer.contains(loadingSpinner)) {
                resultsContainer.insertBefore(subjectSection, loadingSpinner);
            } else {
                resultsContainer.appendChild(subjectSection);
            }
        }

        // Get subject information for display
        function getSubjectInfo(subjectCode) {
            const subjects = {
                'Math': { displayName: 'Mathématiques', icon: 'fas fa-calculator', iconClass: 'math' },
                'French': { displayName: 'Français', icon: 'fas fa-language', iconClass: 'french' },
                'English': { displayName: 'Anglais', icon: 'fas fa-globe', iconClass: 'english' },
                'Science': { displayName: 'Sciences', icon: 'fas fa-flask', iconClass: 'science' }
            };

            return subjects[subjectCode] || {
                displayName: subjectCode,
                icon: 'fas fa-book',
                iconClass: 'default'
            };
        }

        // Show error state
        function showErrorState(title, message) {
            document.getElementById('resultsContainer').innerHTML = `
                <div class="subject-section">
                    <div class="subject-header">
                        <div class="subject-icon" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="subject-title">Erreur</div>
                    </div>
                    <div class="subject-empty">
                        <i class="fas fa-exclamation-circle" style="font-size: 3rem; opacity: 0.3; margin-bottom: 1rem;"></i>
                        <h3>${title}</h3>
                        <p>${message}</p>
                    </div>
                </div>
            `;
        }

        // Show no attendance found
        function showNoAttendanceFound(groupName, dateLabel) {
            document.getElementById('resultsContainer').innerHTML = `
                <div class="no-attendance-state">
                    <div class="subject-icon" style="background: linear-gradient(135deg, #64748b 0%, #475569 100%);">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <h3>Aucune présence enregistrée</h3>
                    <p>Aucune présence n'a été enregistrée pour le groupe <strong>${groupName}</strong> le <strong>${dateLabel}</strong></p>
                    <p style="color: #94a3b8; margin-top: 1rem; font-size: 0.9rem;">
                        <i class="fas fa-info-circle"></i> Essayez une autre date ou contactez l'enseignant
                    </p>
                </div>
            `;

            updateMetaInfo(groupName, dateLabel);
        }

        // Update meta information
        function updateMetaInfo(groupName, dateLabel) {
            const studentCount = allStudents.length;

            // Create subject display names
            const subjectDisplayNames = subjectsWithData.map(subject => {
                const info = getSubjectInfo(subject);
                return info.displayName;
            });

            const subjectsText = subjectDisplayNames.length > 0
                ? subjectDisplayNames.join(', ')
                : 'Aucune matière';

            document.getElementById('resultsMeta').innerHTML = `
                <span><i class="fas fa-calendar"></i> ${dateLabel}</span>
                <span><i class="fas fa-users"></i> ${studentCount} étudiant${studentCount > 1 ? 's' : ''}</span>
                <span><i class="fas fa-book"></i> ${subjectsText}</span>
                <span><i class="fas fa-check-circle"></i> Chargement terminé</span>
            `;
        }

        // Export history to Excel
        function exportHistory() {
            const schoolId = document.getElementById('schoolSelect').value;
            const groupId = document.getElementById('groupSelect').value;
            const date = document.getElementById('dateSelect').value;

            if (!schoolId || !groupId || !date) {
                alert('Veuillez sélectionner une école, un groupe et une date pour exporter');
                return;
            }

            if (subjectsWithData.length === 0) {
                alert('Aucune donnée de présence à exporter pour cette date');
                return;
            }

            // Prepare export data
            const exportData = {
                schoolId: schoolId,
                groupId: groupId,
                date: date,
                subjects: subjectsWithData
            };

            // Call export API
            fetch('/admin/api/export-attendance-history', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(exportData)
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Erreur lors de l\'export');
                    }
                    return response.blob();
                })
                .then(blob => {
                    // Create download link
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = `presences_${document.getElementById('groupSelect').selectedOptions[0].text}_${date.replace(/-/g, '_')}.xlsx`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                })
                .catch(error => {
                    console.error('Export error:', error);
                    alert('Erreur lors de l\'export Excel: ' + error.message);
                });
        }

        // Refresh results
        function refreshResults() {
            const schoolId = document.getElementById('schoolSelect').value;
            const groupId = document.getElementById('groupSelect').value;
            const date = document.getElementById('dateSelect').value;

            if (schoolId && groupId && date) {
                // Clear current results
                document.getElementById('resultsContainer').innerHTML = `
                    <div class="loading" id="loadingSpinner">
                        <i class="fas fa-spinner fa-spin loading-spinner"></i>
                        <p>Actualisation des présences...</p>
                    </div>
                `;

                // Reload data
                loadHistory();
            }
        }

        // Reset filters
        function resetFilters() {
            document.getElementById('schoolSelect').value = '';
            document.getElementById('groupSelect').innerHTML = '<option value="">-- Sélectionner un groupe --</option>';
            document.getElementById('dateSelect').innerHTML = '<option value="">-- Sélectionner une date --</option>';

            disableFilters(['group', 'date']);
            document.getElementById('searchBtn').disabled = true;

            groupsCache = {};
            datesCache = {};
            allStudents = [];
            resetSubjectCounter();

            // Remove any loading spinners
            removeLoadingSpinner();

            // Clear results container
            document.getElementById('resultsContainer').innerHTML = '';

            // Hide results, show initial state
            document.getElementById('initialState').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'none';
        }
    </script>
