{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Tableau de bord - Administration{% endblock %}

{% block page_content %}
    <div class="container-fluid">
        <!-- Statistiques -->
        <div class="row">
            <div class="col-md-3">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Écoles</h6>
                                <h2 class="mb-0">{{ stats.schools }}</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-school fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="{{ ea_url().setController('App\\Controller\\Admin\\SchoolCrudController') }}">
                            Voir toutes les écoles
                        </a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-success text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Enseignants</h6>
                                <h2 class="mb-0">{{ stats.teachers }}</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-chalkboard-teacher fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="{{ ea_url().setController('App\\Controller\\Admin\\TeacherCrudController') }}">
                            Voir tous les enseignants
                        </a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-warning text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Groupes</h6>
                                <h2 class="mb-0">{{ stats.groups }}</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="{{ ea_url().setController('App\\Controller\\Admin\\StudentGroupCrudController') }}">
                            Voir tous les groupes
                        </a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-info text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Étudiants</h6>
                                <h2 class="mb-0">{{ stats.students }}</h2>
                            </div>
                            <div class="icon-circle">
                                <i class="fas fa-user-graduate fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="{{ ea_url().setController('App\\Controller\\Admin\\StudentCrudController') }}">
                            Voir tous les étudiants
                        </a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-clock me-1"></i>
                        Heures enseignants (mois {{ teacherHoursMonth }})
                    </div>
                    <div class="card-body">
                        {% if teacherHours is empty %}
                            <div class="text-muted">Aucune donnee disponible.</div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered">
                                    <thead class="table-light">
                                    <tr>
                                        <th>Enseignant</th>
                                        <th>Heures</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in teacherHours %}
                                        <tr>
                                            <td>{{ item.teacher.firstName }} {{ item.teacher.lastName }}</td>
                                            <td>
                                                <span class="badge bg-secondary text-white">
                                                    {{ item.hours|number_format(1, '.', '') }}
                                                </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Planning statique - TOUT AFFICHÉ -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-calendar-alt me-1"></i>
                        Planning des enseignants
                        <span class="badge bg-secondary float-end">{{ staticSchedule|length }} cours</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead class="table-light">
                                <tr>
                                    <th style="width: 30%">École</th>
                                    <th style="width: 10%">Matière</th>
                                    <th style="width: 20%">Enseignant</th>
                                    <th style="width: 15%">Jour</th>
                                    <th style="width: 15%">Horaire</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for schedule in staticSchedule %}
                                    <tr>
                                        <td>{{ schedule.school }}</td>
                                        <td>{{ schedule.subject }}</td>
                                        <td>{{ schedule.teacher }}</td>
                                        <td>
                                            <span class="badge
                                                {% if schedule.day == 'السبت' %}bg-success
                                                {% elseif schedule.day == 'الأحد' %}bg-primary
                                                {% elseif schedule.day == 'الاثنين' %}bg-secondary
                                                {% elseif schedule.day == 'الثلاثاء' %}bg-warning
                                                {% elseif schedule.day == 'الأربعاء' %}bg-info
                                                {% elseif schedule.day == 'الخميس' %}bg-dark
                                                {% elseif schedule.day == 'الجمعة' %}bg-danger
                                                {% else %}bg-secondary{% endif %}">
                                                {{ schedule.day }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary text-white">
                                                {{ schedule.time }}
                                            </span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3 text-muted text-center">
                            <small>
                                <i class="fas fa-info-circle me-1"></i>
                                Total: {{ staticSchedule|length }} cours programmés
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .icon-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-footer {
            background: rgba(0, 0, 0, 0.1);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stretched-link::after {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            z-index: 1;
            content: "";
        }

        .badge {
            font-size: 0.85em;
            padding: 6px 12px;
            border-radius: 20px;
        }

        table {
            font-size: 0.9rem;
        }

        th {
            font-weight: 600;
            background-color: #f8f9fa !important;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            font-weight: 600;
        }
    </style>
{% endblock %}
