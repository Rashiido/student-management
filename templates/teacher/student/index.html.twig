{% extends 'teacher/base.html.twig' %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap');

        .students-wrapper {
            font-family: "Cairo", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .students-hero {
            background: linear-gradient(135deg, #0284C7 0%, #f97316 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .students-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .students-hero::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .students-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 2rem;
            flex-wrap: wrap;
            position: relative;
            z-index: 1;
        }

        .students-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
        }

        .students-subtitle {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-weight: 400;
        }

        .add-student-btn {
            padding: 0.85rem 1.75rem;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            color: #ffffff;
            font-weight: 700;
            font-size: 0.95rem;
            text-decoration: none;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .add-student-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            color: #ffffff;
        }

        .filter-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            margin-bottom: 1.5rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .filter-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .filter-card-header {
            padding: 1.5rem;
            border-bottom: 2px solid #e2e8f0;
            background: #f8fafc;
        }

        .filter-card-header h4 {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .filter-card-body {
            padding: 1.5rem;
        }

        .filter-select {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.2s;
            background: #ffffff;
            width: 100%;
        }

        .filter-select:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 0 4px rgba(6, 182, 212, 0.1);
            outline: none;
        }

        .students-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .students-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .students-card-header {
            padding: 1.5rem;
            border-bottom: 2px solid #e2e8f0;
            background: #f8fafc;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .students-card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .student-count-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #eff6ff;
            color: #1e40af;
            border-radius: 10px;
            padding: 0.6rem 1rem;
            font-weight: 700;
            font-size: 0.85rem;
            border: 1px solid #dbeafe;
        }

        .students-table-wrapper {
            overflow-x: auto;
        }

        .students-table {
            width: 100%;
            margin: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .students-table thead {
            background: #f8fafc;
        }

        .students-table thead th {
            padding: 1.25rem 1.5rem;
            font-weight: 700;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #475569;
            border-bottom: 2px solid #e2e8f0;
            text-align: left;
        }

        .students-table tbody tr {
            transition: all 0.2s;
            border-bottom: 1px solid #f1f5f9;
        }

        .students-table tbody tr:hover {
            background: #f8fafc;
        }

        .students-table tbody tr:last-child {
            border-bottom: none;
        }

        .students-table tbody td {
            padding: 1.25rem 1.5rem;
            color: #1e293b;
            vertical-align: middle;
        }

        .student-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .student-avatar {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            font-weight: 700;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.25);
        }

        .student-name {
            font-weight: 600;
            font-size: 1.05rem;
            color: #1f2937;
        }

        .class-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
            color: #166534;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            font-size: 0.9rem;
            border: 1px solid #bbf7d0;
        }

        .btn-delete {
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.85rem;
            text-decoration: none;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            border: 2px solid transparent;
            cursor: pointer;
            background: #fee2e2;
            color: #dc2626;
            border-color: #fecaca;
        }

        .btn-delete:hover {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: #ffffff;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-state-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            border-radius: 16px;
            background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #06b6d4;
        }

        .empty-state-icon i {
            font-size: 2.5rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            font-size: 1rem;
            color: #64748b;
            margin-bottom: 2rem;
        }

        .empty-state-btn {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            font-weight: 700;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
        }

        .empty-state-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(6, 182, 212, 0.4);
            background: #0891b2;
            color: #ffffff;
        }

        @media (max-width: 768px) {
            .students-wrapper {
                padding: 1rem;
            }

            .students-hero {
                padding: 1.5rem;
            }

            .students-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .students-title {
                font-size: 1.75rem;
            }

            .add-student-btn {
                width: 100%;
                justify-content: center;
            }

            .students-table thead {
                display: none;
            }

            .students-table tbody tr {
                display: flex;
                flex-direction: column;
                gap: 1rem;
                padding: 1.5rem;
                border: 1px solid #e2e8f0;
                border-radius: 12px;
                margin-bottom: 1rem;
                background: #ffffff;
            }

            .students-table tbody td {
                padding: 0;
                border: none;
            }

            .btn-delete {
                width: 100%;
                justify-content: center;
            }
        }
    </style>

    <div class="students-wrapper">
        <div class="students-hero">
            <div class="students-header">
                <div>
                    <h1 class="students-title">Mes Élèves</h1>
                    <p class="students-subtitle">Gérez et suivez vos élèves</p>
                </div>
                <a href="{{ path('teacher_student_add') }}" class="add-student-btn">
                    <i class="bi bi-person-plus-fill"></i>
                    Ajouter un Élève
                </a>
            </div>
        </div>

        <div class="filter-card">
            <div class="filter-card-header">
                <h4>
                    <i class="bi bi-funnel"></i>
                    Filtrer par Classe
                </h4>
            </div>
            <div class="filter-card-body">
                <form method="get" action="{{ path('teacher_my_students') }}">
                    <select name="group" class="form-select filter-select" onchange="this.form.submit()">
                        <option value="">Tous mes élèves</option>
                        {% for g in groups %}
                            <option value="{{ g.id }}" {{ app.request.query.get('group') == g.id ? 'selected' : '' }}>
                                {{ g.name }}
                            </option>
                        {% endfor %}
                    </select>
                </form>
            </div>
        </div>

        <div class="students-card">
            <div class="students-card-header">
                <h3 class="students-card-title">
                    <i class="bi bi-people-fill"></i>
                    {% if group %}{{ group.name }}{% else %}Tous mes Élèves{% endif %}
                </h3>
                {% if students|length > 0 %}
                    <span class="student-count-badge">
                        <i class="bi bi-person-fill"></i>
                        {{ students|length }} élève{{ students|length > 1 ? 's' : '' }}
                    </span>
                {% endif %}
            </div>

            {% if students|length > 0 %}
                <div class="students-table-wrapper">
                    <table class="students-table">
                        <thead>
                            <tr>
                                <th>Élève</th>
                                <th>Nom de Famille</th>
                                <th>Classe</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for student in students %}
                                <tr>
                                    <td>
                                        <div class="student-info">
                                            <div class="student-avatar">
                                                {{ student.firstName|first|upper }}{{ student.lastName|first|upper }}
                                            </div>
                                            <span class="student-name">{{ student.firstName }}</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="student-name">{{ student.lastName }}</span>
                                    </td>
                                    <td>
                                        <span class="class-badge">
                                            <i class="bi bi-journal-bookmark-fill"></i>
                                            {{ student.studentGroup.name }}
                                        </span>
                                    </td>
                                    <td>
                                        <form method="post" action="{{ path('teacher_student_delete', {'id': student.id}) }}" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_student' ~ student.id) }}">
                                            <button type="submit" class="btn-delete" onclick="return confirm('⚠️ Êtes-vous sûr de vouloir supprimer cet élève ?\n\nCette action est irréversible.');">
                                                <i class="bi bi-trash"></i>
                                                Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h2 class="empty-state-title">
                        {% if group %}
                            Aucun Élève dans cette Classe
                        {% else %}
                            Aucun Élève
                        {% endif %}
                    </h2>
                    <p class="empty-state-text">
                        {% if group %}
                            Cette classe n'a pas encore d'élèves inscrits
                        {% else %}
                            Commencez par ajouter votre premier élève
                        {% endif %}
                    </p>
                    <a href="{{ path('teacher_student_add') }}" class="empty-state-btn">
                        <i class="bi bi-person-plus-fill"></i>
                        Ajouter un Élève
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}