{% extends 'teacher/base.html.twig' %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap');

        .add-student-wrapper {
            font-family: "Cairo", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .add-student-hero {
            background: linear-gradient(135deg, #0284C7 0%, #f97316 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .add-student-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .add-student-hero::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .add-student-header {
            position: relative;
            z-index: 1;
        }

        .add-student-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .add-student-subtitle {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-weight: 400;
        }

        .form-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .form-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .form-card-body {
            padding: 2rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .form-label {
            font-weight: 600;
            color: #475569;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-label .required {
            color: #ef4444;
        }

        .form-control, .form-select {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 0.85rem 1.15rem;
            font-size: 1rem;
            transition: all 0.2s;
            background: #ffffff;
            width: 100%;
        }

        .form-control:focus, .form-select:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 0 4px rgba(6, 182, 212, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: #94a3b8;
        }

        .input-icon-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1.15rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 1.1rem;
            pointer-events: none;
        }

        .input-icon-wrapper .form-control,
        .input-icon-wrapper .form-select {
            padding-left: 3rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid #e2e8f0;
        }

        .btn-submit {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            font-weight: 700;
            font-size: 0.95rem;
            border: none;
            transition: all 0.2s;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(6, 182, 212, 0.4);
            background: #0891b2;
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .btn-cancel {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: #f1f5f9;
            color: #475569;
            font-weight: 600;
            font-size: 0.95rem;
            border: 2px solid #e2e8f0;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-cancel:hover {
            background: #e2e8f0;
            border-color: #cbd5e1;
            color: #334155;
            text-decoration: none;
        }

        .form-help-text {
            font-size: 0.85rem;
            color: #64748b;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .student-entry {
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            padding: 1.25rem;
            background: #f8fafc;
        }

        .student-entry + .student-entry {
            margin-top: 1rem;
        }

        .student-entry-title {
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .student-entry-index {
            width: 28px;
            height: 28px;
            border-radius: 999px;
            background: #e0f2fe;
            color: #0284c7;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 0.85rem;
        }

        .student-entry-grid {
            display: grid;
            gap: 1rem;
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }

        .info-box {
            background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
            border: 1px solid #bfdbfe;
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 2rem;
            display: flex;
            gap: 1rem;
        }

        .info-box-icon {
            font-size: 1.5rem;
            color: #06b6d4;
            flex-shrink: 0;
        }

        .info-box-content {
            flex: 1;
        }

        .info-box-title {
            font-weight: 700;
            color: #0284C7;
            margin-bottom: 0.25rem;
            font-size: 0.95rem;
        }

        .info-box-text {
            font-size: 0.9rem;
            color: #0284C7;
            margin: 0;
        }

        @media (max-width: 768px) {
            .add-student-wrapper {
                padding: 1rem;
            }

            .add-student-hero {
                padding: 1.5rem;
            }

            .add-student-title {
                font-size: 1.75rem;
            }

            .form-card-body {
                padding: 1.5rem;
            }

            .form-actions {
                flex-direction: column-reverse;
            }

            .btn-submit,
            .btn-cancel {
                width: 100%;
                justify-content: center;
            }

            .student-entry-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <div class="add-student-wrapper">
        <div class="add-student-hero">
            <div class="add-student-header">
                <h1 class="add-student-title">
                    <i class="bi bi-person-plus-fill"></i>
                    Ajouter des élèves
                </h1>
                <p class="add-student-subtitle">Enregistrez jusqu'à 10 élèves dans votre classe</p>
            </div>
        </div>

        <div class="form-card">
            <div class="form-card-body">
                <div class="info-box">
                    <div class="info-box-icon">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div class="info-box-content">
                        <div class="info-box-title">Information</div>
                        <p class="info-box-text">Tous les champs marqués d'un astérisque (<span style="color: #ef4444;">*</span>) sont obligatoires</p>
                    </div>
                </div>

                <form method="post" action="{{ path('teacher_student_add') }}">
                    <div class="form-section">
                        <h3 class="form-section-title">
                            <i class="bi bi-journal-bookmark"></i>
                            Classe Assignée
                        </h3>

                        <div class="mb-4">
                            <label for="group" class="form-label">
                                <i class="bi bi-journal-bookmark"></i>
                                Classe
                                <span class="required">*</span>
                            </label>
                            <div class="input-icon-wrapper">
                                <i class="bi bi-journal-bookmark input-icon"></i>
                                <select name="group" id="group" class="form-select" required>
                                    <option value="">-- Sélectionner une classe --</option>
                                    {% for group in groups %}
                                        <option value="{{ group.id }}">{{ group.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-help-text">
                                <i class="bi bi-info-circle"></i>
                                Cette classe sera appliquée à tous les élèves ajoutés
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3 class="form-section-title">
                            <i class="bi bi-person-badge"></i>
                            Élèves (jusqu'à 10)
                        </h3>

                        <div class="form-help-text mb-3">
                            <i class="bi bi-info-circle"></i>
                            Renseignez au moins un élève. Laissez une ligne vide pour l'ignorer.
                        </div>

                        {% for i in 1..10 %}
                            <div class="student-entry">
                                <div class="student-entry-title">
                                    <span class="student-entry-index">{{ i }}</span>
                                    Élève {{ i }}
                                </div>
                                <div class="student-entry-grid">
                                    <div>
                                        <label for="firstName-{{ i }}" class="form-label">
                                            <i class="bi bi-person"></i>
                                            Prénom
                                            {% if i == 1 %}<span class="required">*</span>{% endif %}
                                        </label>
                                        <div class="input-icon-wrapper">
                                            <i class="bi bi-person input-icon"></i>
                                            <input
                                                type="text"
                                                id="firstName-{{ i }}"
                                                name="students[{{ i }}][firstName]"
                                                class="form-control"
                                                placeholder="Ex: Mohammed"
                                                {% if i == 1 %}required{% endif %}
                                                autocomplete="given-name">
                                        </div>
                                    </div>

                                    <div>
                                        <label for="lastName-{{ i }}" class="form-label">
                                            <i class="bi bi-person-fill"></i>
                                            Nom de Famille
                                            {% if i == 1 %}<span class="required">*</span>{% endif %}
                                        </label>
                                        <div class="input-icon-wrapper">
                                            <i class="bi bi-person-fill input-icon"></i>
                                            <input
                                                type="text"
                                                id="lastName-{{ i }}"
                                                name="students[{{ i }}][lastName]"
                                                class="form-control"
                                                placeholder="Ex: Alami"
                                                {% if i == 1 %}required{% endif %}
                                                autocomplete="family-name">
                                        </div>
                                    </div>

                                    <div>
                                        <label for="niveauScolaire-{{ i }}" class="form-label">
                                            <i class="bi bi-mortarboard"></i>
                                            Niveau Scolaire
                                            {% if i == 1 %}<span class="required">*</span>{% endif %}
                                        </label>
                                        <div class="input-icon-wrapper">
                                            <i class="bi bi-mortarboard input-icon"></i>
                                            <input
                                                type="text"
                                                id="niveauScolaire-{{ i }}"
                                                name="students[{{ i }}][niveauScolaire]"
                                                class="form-control"
                                                placeholder="Ex: 6ème année, Bac, Terminale..."
                                                {% if i == 1 %}required{% endif %}>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="form-actions">
                        <a href="{{ path('teacher_my_students') }}" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            Annuler
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="bi bi-check-circle-fill"></i>
                            Ajouter les élèves
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
