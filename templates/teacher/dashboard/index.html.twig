{% extends 'teacher/base.html.twig' %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap');

        .dashboard-wrapper {
            font-family: "Cairo", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .teacher-hero {
            background: linear-gradient(135deg, #0284C7 0%, #f97316 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .teacher-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .teacher-hero::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .teacher-page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 2rem;
            flex-wrap: wrap;
            position: relative;
            z-index: 1;
        }

        .teacher-page-header h2 {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
        }

        .teacher-page-header p {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-weight: 400;
        }

        .teacher-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .teacher-action {
            padding: 0.95rem 1.75rem;
            border-radius: 12px;
            font-weight: 700;
            font-size: 1rem;
            text-decoration: none;
            transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: none;
            cursor: pointer;
            background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
            color: #ffffff;
            box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
        }

        .teacher-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(249, 115, 22, 0.4);
            color: #ffffff;
        }

        .teacher-action:active {
            transform: translateY(0);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.25rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            height: 100%;
            border: 1px solid #e2e8f0;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.03) 0%, rgba(249, 115, 22, 0.05) 100%);
            opacity: 0;
            transition: opacity 0.3s;
            z-index: 0;
        }

        .stat-card:hover::before {
            opacity: 1;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            border-color: transparent;
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .stat-card-body {
            padding: 1.5rem;
            position: relative;
            z-index: 1;
        }

        .stat-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            z-index: 2;
            background: linear-gradient(to right, #3b82f6 0%, #f97316 100%);
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            margin-bottom: 1rem;
            color: #ffffff;
            background: linear-gradient(135deg, #3b82f6 0%, #f97316 100%);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .stat-label {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .stat-value {
            font-size: 2.25rem;
            font-weight: 800;
            line-height: 1;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
            background: linear-gradient(135deg, #3b82f6 0%, #f97316 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-change {
            font-size: 0.8rem;
            font-weight: 500;
            color: #64748b;
        }

        .stat-card-footer {
            padding: 0.875rem 1.5rem;
            background: #f8fafc;
            border-top: 2px solid #e2e8f0;
            position: relative;
            z-index: 1;
        }

        .stat-card-footer a {
            background: linear-gradient(135deg, #3b82f6 0%, #f97316 100%);
            color: #ffffff;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.85rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
            padding: 0.65rem 1.25rem;
            border-radius: 10px;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
        }

        .stat-card-footer a:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
        }

        @media (max-width: 768px) {
            .dashboard-wrapper {
                padding: 1rem;
            }

            .teacher-hero {
                padding: 1.5rem;
            }

            .teacher-page-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .teacher-page-header h2 {
                font-size: 1.75rem;
            }

            .teacher-actions {
                width: 100%;
            }

            .teacher-action {
                flex: 1;
                justify-content: center;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .stat-value {
                font-size: 2rem;
            }
        }
    </style>

    <div class="dashboard-wrapper">
        <div class="teacher-hero">
            <div class="teacher-page-header">
                <div>
                    <h2>Bienvenue</h2>
                    <p>Espace professeur : gérez vos classes et présences</p>
                </div>
                <div class="teacher-actions">
                    <a href="{{ path('teacher_attendance_mark') }}" class="teacher-action">
                        <i class="bi bi-check-circle"></i>
                        Marquer Présence
                    </a>
                </div>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card primary">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-journal-bookmark-fill"></i>
                    </div>
                    <div class="stat-label">Mes Classes</div>
                    <div class="stat-value">{{ totalGroups ?? 0 }}</div>
                    <div class="stat-change">Classes actives</div>
                </div>
                <div class="stat-card-footer">
                    <a href="{{ path('teacher_my_groups') }}">
                        Voir toutes les classes
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>

            <div class="stat-card success">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="stat-label">Total Élèves</div>
                    <div class="stat-value">{{ totalStudents ?? 0 }}</div>
                    <div class="stat-change">Élèves inscrits</div>
                </div>
                <div class="stat-card-footer">
                    <a href="{{ path('teacher_my_students') }}">
                        Voir tous les élèves
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>

            <div class="stat-card info">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="stat-label">Présents Aujourd'hui</div>
                    <div class="stat-value">{{ attendanceStats.present ?? 0 }}</div>
                    <div class="stat-change">
                        {% if totalStudents > 0 %}
                            {{ ((attendanceStats.present ?? 0) / totalStudents * 100)|round }}% de présence
                        {% else %}
                            Aucune donnée
                        {% endif %}
                    </div>
                </div>
                <div class="stat-card-footer">
                    <a href="{{ path('teacher_attendance_mark') }}">
                        Marquer la présence
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>

            <div class="stat-card danger">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="bi bi-x-circle-fill"></i>
                    </div>
                    <div class="stat-label">Absents Aujourd'hui</div>
                    <div class="stat-value">{{ attendanceStats.absent ?? 0 }}</div>
                    <div class="stat-change">
                        {% if totalStudents > 0 %}
                            {{ ((attendanceStats.absent ?? 0) / totalStudents * 100)|round }}% d'absence
                        {% else %}
                            Aucune donnée
                        {% endif %}
                    </div>
                </div>
                <div class="stat-card-footer">
                    <a href="{{ path('teacher_attendance_history') }}">
                        Voir l'historique
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}