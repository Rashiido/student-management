{% extends 'teacher/base.html.twig' %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap');

        .history-wrapper {
            font-family: "Cairo", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .history-hero {
            background: linear-gradient(135deg, #0284C7 0%, #f97316 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .history-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .history-hero::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .history-header {
            position: relative;
            z-index: 1;
        }

        .history-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .history-subtitle {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-weight: 400;
        }

        .filter-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            margin-bottom: 1.5rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .filter-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .filter-card-header {
            padding: 1.5rem;
            border-bottom: 2px solid #e2e8f0;
            background: #f8fafc;
        }

        .filter-card-header h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .filter-card-body {
            padding: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #475569;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-select, .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.2s;
            background: #ffffff;
            width: 100%;
        }

        .form-select:focus, .form-control:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 0 4px rgba(6, 182, 212, 0.1);
            outline: none;
        }

        .btn-filter {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            font-weight: 700;
            font-size: 0.95rem;
            border: none;
            transition: all 0.2s;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-filter:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(6, 182, 212, 0.4);
            background: #0891b2;
        }

        .btn-filter:active {
            transform: translateY(0);
        }

        .history-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .history-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .history-card-header {
            padding: 1.5rem;
            border-bottom: 2px solid #e2e8f0;
            background: #f8fafc;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .history-card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .record-count-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #eff6ff;
            color: #1e40af;
            border-radius: 10px;
            padding: 0.6rem 1rem;
            font-weight: 700;
            font-size: 0.85rem;
            border: 1px solid #dbeafe;
        }

        .history-table-wrapper {
            overflow-x: auto;
        }

        .history-table {
            width: 100%;
            margin: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .history-table thead {
            background: #f8fafc;
        }

        .history-table thead th {
            padding: 1.25rem 1.5rem;
            font-weight: 700;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #475569;
            border-bottom: 2px solid #e2e8f0;
            text-align: left;
        }

        .history-table tbody tr {
            transition: all 0.2s;
            border-bottom: 1px solid #f1f5f9;
        }

        .history-table tbody tr:hover {
            background: #f8fafc;
        }

        .history-table tbody tr:last-child {
            border-bottom: none;
        }

        .history-table tbody td {
            padding: 1.25rem 1.5rem;
            color: #1e293b;
            vertical-align: middle;
        }

        .date-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #f8fafc;
            color: #475569;
            border-radius: 10px;
            padding: 0.5rem 0.85rem;
            font-weight: 600;
            font-size: 0.9rem;
            border: 1px solid #e2e8f0;
        }

        .student-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .student-avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            font-weight: 700;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.25);
        }

        .student-name {
            font-weight: 600;
            color: #1f2937;
        }

        .class-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #faf5ff;
            color: #7c3aed;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            font-size: 0.9rem;
            border: 1px solid #e9d5ff;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-weight: 700;
            font-size: 0.9rem;
            border: 1px solid;
        }

        .status-badge.present {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
            border-color: #86efac;
        }

        .status-badge.absent {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            border-color: #fca5a5;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-state-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            border-radius: 16px;
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #b45309;
        }

        .empty-state-icon i {
            font-size: 2.5rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            font-size: 1rem;
            color: #64748b;
        }

        @media (max-width: 768px) {
            .history-wrapper {
                padding: 1rem;
            }

            .history-hero {
                padding: 1.5rem;
            }

            .history-title {
                font-size: 1.75rem;
            }

            .filter-card-body .row {
                gap: 0;
            }

            .btn-filter {
                width: 100%;
                justify-content: center;
            }

            .history-table thead {
                display: none;
            }

            .history-table tbody tr {
                display: flex;
                flex-direction: column;
                gap: 1rem;
                padding: 1.5rem;
                border: 1px solid #e2e8f0;
                border-radius: 12px;
                margin-bottom: 1rem;
                background: #ffffff;
            }

            .history-table tbody td {
                padding: 0;
                border: none;
            }

            .history-table tbody td::before {
                content: attr(data-label);
                font-weight: 700;
                color: #64748b;
                text-transform: uppercase;
                font-size: 0.75rem;
                letter-spacing: 0.05em;
                display: block;
                margin-bottom: 0.5rem;
            }
        }
    </style>

    <div class="history-wrapper">
        <div class="history-hero">
            <div class="history-header">
                <h1 class="history-title">
                    <i class="bi bi-clock-history"></i>
                    Historique des Présences
                </h1>
                <p class="history-subtitle">Consultez et analysez les présences de vos élèves</p>
            </div>
        </div>

        <div class="filter-card">
            <div class="filter-card-header">
                <h3>
                    <i class="bi bi-funnel-fill"></i>
                    Filtres de Recherche
                </h3>
            </div>
            <div class="filter-card-body">
                <form method="get" action="{{ path('teacher_attendance_history') }}">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="group" class="form-label">Classe</label>
                            <select name="group" id="group" class="form-select">
                                <option value="">Toutes les classes</option>
                                {% for group in groups %}
                                    <option value="{{ group.id }}" {{ selectedGroupId == group.id ? 'selected' : '' }}>
                                        {{ group.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="start_date" class="form-label">Date Début</label>
                            <input type="date" name="start_date" id="start_date" class="form-control" value="{{ startDate }}">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="end_date" class="form-label">Date Fin</label>
                            <input type="date" name="end_date" id="end_date" class="form-control" value="{{ endDate }}">
                        </div>
                    </div>
                    <button type="submit" class="btn-filter">
                        <i class="bi bi-search"></i>
                        Appliquer les Filtres
                    </button>
                </form>
            </div>
        </div>

        <div class="history-card">
            <div class="history-card-header">
                <h3 class="history-card-title">
                    <i class="bi bi-list-ul"></i>
                    Enregistrements
                </h3>
                {% if attendances|length > 0 %}
                    <span class="record-count-badge">
                        <i class="bi bi-file-text"></i>
                        {{ attendances|length }} enregistrement{{ attendances|length > 1 ? 's' : '' }}
                    </span>
                {% endif %}
            </div>

            {% if attendances|length > 0 %}
                <div class="history-table-wrapper">
                    <table class="history-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Élève</th>
                                <th>Classe</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for attendance in attendances %}
                                <tr>
                                    <td data-label="Date">
                                        <span class="date-badge">
                                            <i class="bi bi-calendar3"></i>
                                            {{ attendance.date|date('d/m/Y') }}
                                        </span>
                                    </td>
                                    <td data-label="Élève">
                                        <div class="student-info">
                                            <div class="student-avatar">
                                                {{ attendance.student.firstName|first|upper }}{{ attendance.student.lastName|first|upper }}
                                            </div>
                                            <span class="student-name">
                                                {{ attendance.student.firstName }} {{ attendance.student.lastName }}
                                            </span>
                                        </div>
                                    </td>
                                    <td data-label="Classe">
                                        <span class="class-badge">
                                            <i class="bi bi-journal-bookmark-fill"></i>
                                            {{ attendance.studentGroup.name }}
                                        </span>
                                    </td>
                                    <td data-label="Statut">
                                        {% if attendance.status == 'present' %}
                                            <span class="status-badge present">
                                                <i class="bi bi-check-circle-fill"></i>
                                                Présent
                                            </span>
                                        {% elseif attendance.status == 'absent' %}
                                            <span class="status-badge absent">
                                                <i class="bi bi-x-circle-fill"></i>
                                                Absent
                                            </span>
                                        {% else %}
                                            <span class="status-badge">
                                                <i class="bi bi-question-circle-fill"></i>
                                                {{ attendance.status }}
                                            </span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h2 class="empty-state-title">Aucun Enregistrement Trouvé</h2>
                    <p class="empty-state-text">Aucun enregistrement ne correspond aux filtres sélectionnés.</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}