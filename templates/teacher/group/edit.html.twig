{% extends 'teacher/base.html.twig' %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap');

        .edit-class-wrapper {
            font-family: "Cairo", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .edit-class-hero {
            background: linear-gradient(135deg, #0284C7 0%, #f97316 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .edit-class-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .edit-class-hero::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .edit-class-header {
            position: relative;
            z-index: 1;
        }

        .edit-class-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .edit-class-subtitle {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-weight: 400;
        }

        .form-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .form-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .form-card-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: #475569;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-label .required {
            color: #ef4444;
        }

        .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 0.85rem 1.15rem;
            font-size: 1rem;
            transition: all 0.2s;
            background: #ffffff;
            width: 100%;
        }

        .form-control:focus {
            border-color: #06b6d4;
            box-shadow: 0 0 0 4px rgba(6, 182, 212, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: #94a3b8;
        }

        .input-icon-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1.15rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 1.25rem;
            pointer-events: none;
        }

        .input-icon-wrapper .form-control {
            padding-left: 3rem;
        }

        .form-help-text {
            font-size: 0.875rem;
            color: #64748b;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-box {
            background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
            border: 1px solid #bfdbfe;
            border-radius: 12px;
            padding: 1.25rem;
            margin-top: 1.5rem;
        }

        .info-box-title {
            font-weight: 700;
            color: #0284C7;
            margin-bottom: 1rem;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .info-stat {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            background: rgba(255, 255, 255, 0.6);
            border-radius: 10px;
            border: 1px solid rgba(6, 182, 212, 0.2);
        }

        .info-stat-icon {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            flex-shrink: 0;
        }

        .info-stat-content {
            flex: 1;
        }

        .info-stat-label {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #64748b;
            margin-bottom: 0.15rem;
        }

        .info-stat-value {
            font-weight: 700;
            color: #0284C7;
            font-size: 1rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid #e2e8f0;
        }

        .btn-submit {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            font-weight: 700;
            font-size: 0.95rem;
            border: none;
            transition: all 0.2s;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(6, 182, 212, 0.4);
            background: #0891b2;
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .btn-cancel {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: #f1f5f9;
            color: #475569;
            font-weight: 600;
            font-size: 0.95rem;
            border: 2px solid #e2e8f0;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-cancel:hover {
            background: #e2e8f0;
            border-color: #cbd5e1;
            color: #334155;
            text-decoration: none;
        }

        @media (max-width: 768px) {
            .edit-class-wrapper {
                padding: 1rem;
            }

            .edit-class-hero {
                padding: 1.5rem;
            }

            .edit-class-title {
                font-size: 1.75rem;
            }

            .form-card-body {
                padding: 1.5rem;
            }

            .form-actions {
                flex-direction: column-reverse;
            }

            .btn-submit,
            .btn-cancel {
                width: 100%;
                justify-content: center;
            }

            .info-stats {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <div class="edit-class-wrapper">
        <div class="edit-class-hero">
            <div class="edit-class-header">
                <h1 class="edit-class-title">
                    <i class="bi bi-pencil-square"></i>
                    Modifier la classe
                </h1>
                <p class="edit-class-subtitle">{{ group.name }}</p>
            </div>
        </div>

        <div class="form-card">
            <div class="form-card-body">
                <form method="post">
                    <div class="mb-4">
                        <label for="name" class="form-label">
                            <i class="bi bi-journal-bookmark"></i>
                            Nom de la classe
                            <span class="required">*</span>
                        </label>
                        <div class="input-icon-wrapper">
                            <i class="bi bi-journal-text input-icon"></i>
                            <input
                                type="text"
                                name="name"
                                id="name"
                                class="form-control"
                                value="{{ group.name }}"
                                required
                                placeholder="Ex: 6ème A, CM1 B, etc."
                                autocomplete="off"
                                maxlength="100">
                        </div>
                        <div class="form-help-text">
                            <i class="bi bi-info-circle"></i>
                            Le nom de la classe (ex: 6ème A, CM1 B, etc.)
                        </div>
                    </div>

                    <div class="info-box">
                        <div class="info-box-title">
                            <i class="bi bi-info-circle-fill"></i>
                            Informations de la classe
                        </div>
                        <div class="info-stats">
                            <div class="info-stat">
                                <div class="info-stat-icon">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div class="info-stat-content">
                                    <div class="info-stat-label">École</div>
                                    <div class="info-stat-value">{{ group.school.name }}</div>
                                </div>
                            </div>
                            <div class="info-stat">
                                <div class="info-stat-icon">
                                    <i class="bi bi-people-fill"></i>
                                </div>
                                <div class="info-stat-content">
                                    <div class="info-stat-label">Nombre d'élèves</div>
                                    <div class="info-stat-value">{{ group.students|length }}</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <a href="{{ path('teacher_my_groups') }}" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            Annuler
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="bi bi-check-circle-fill"></i>
                            Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
