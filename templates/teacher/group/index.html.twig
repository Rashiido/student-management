{% extends 'teacher/base.html.twig' %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap');

        .classes-wrapper {
            font-family: "Cairo", "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
        }

        .classes-hero {
            background: linear-gradient(135deg, #0284C7 0%, #f97316 100%);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .classes-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .classes-hero::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
            border-radius: 50%;
        }

        .classes-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 2rem;
            flex-wrap: wrap;
            position: relative;
            z-index: 1;
        }

        .classes-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
        }

        .classes-subtitle {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.95);
            margin: 0;
            font-weight: 400;
        }

        .add-class-btn {
            padding: 0.85rem 1.75rem;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            color: #ffffff;
            font-weight: 700;
            font-size: 0.95rem;
            text-decoration: none;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .add-class-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            color: #ffffff;
        }

        .classes-card {
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .classes-card:hover {
            box-shadow: 0 12px 30px rgba(59, 130, 246, 0.15);
        }

        .classes-stats {
            display: flex;
            gap: 1rem;
            padding: 1.5rem;
            background: #f8fafc;
            border-bottom: 2px solid #e2e8f0;
            flex-wrap: wrap;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1.25rem;
            background: #ffffff;
            border-radius: 12px;
            border: 1px solid #e2e8f0;
            flex: 1;
            min-width: 200px;
        }

        .stat-item-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffffff;
            font-size: 1.1rem;
        }

        .stat-item-icon.classes-icon {
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
        }

        .stat-item-icon.students-icon {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .stat-item-content {
            flex: 1;
        }

        .stat-item-label {
            font-size: 0.75rem;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 600;
        }

        .stat-item-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
        }

        .classes-table-wrapper {
            overflow-x: auto;
        }

        .classes-table {
            width: 100%;
            margin: 0;
            border-collapse: separate;
            border-spacing: 0;
        }

        .classes-table thead {
            background: #f8fafc;
        }

        .classes-table thead th {
            padding: 1.25rem 1.5rem;
            font-weight: 700;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #475569;
            border-bottom: 2px solid #e2e8f0;
            text-align: left;
        }

        .classes-table tbody tr {
            transition: all 0.2s;
            border-bottom: 1px solid #f1f5f9;
        }

        .classes-table tbody tr:hover {
            background: #f8fafc;
        }

        .classes-table tbody tr:last-child {
            border-bottom: none;
        }

        .classes-table tbody td {
            padding: 1.25rem 1.5rem;
            color: #1e293b;
            vertical-align: middle;
        }

        .class-name {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .class-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            font-weight: 700;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.25);
        }

        .class-name-text {
            font-weight: 600;
            font-size: 1.05rem;
            color: #1f2937;
        }

        .student-count-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #eff6ff;
            color: #1e40af;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-weight: 700;
            font-size: 0.9rem;
            border: 1px solid #dbeafe;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.85rem;
            text-decoration: none;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            border: 2px solid transparent;
            cursor: pointer;
        }

        .btn-action.view {
            background: #f1f5f9;
            color: #475569;
            border-color: #e2e8f0;
        }

        .btn-action.view:hover {
            background: #e2e8f0;
            color: #1e293b;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-action.edit {
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            border-color: transparent;
        }

        .btn-action.edit:hover {
            background: #0891b2;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
        }

        .btn-action.delete {
            background: #fee2e2;
            color: #dc2626;
            border-color: #fecaca;
        }

        .btn-action.delete:hover {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: #ffffff;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-state-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            border-radius: 16px;
            background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #06b6d4;
        }

        .empty-state-icon i {
            font-size: 2.5rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            font-size: 1rem;
            color: #64748b;
            margin-bottom: 2rem;
        }

        .empty-state-btn {
            padding: 0.85rem 2rem;
            border-radius: 12px;
            background: linear-gradient(135deg, #0EA5E9 0%, #0284C7 100%);
            color: #ffffff;
            font-weight: 700;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
        }

        .empty-state-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(6, 182, 212, 0.4);
            background: #0891b2;
            color: #ffffff;
        }

        @media (max-width: 768px) {
            .classes-wrapper {
                padding: 1rem;
            }

            .classes-hero {
                padding: 1.5rem;
            }

            .classes-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .classes-title {
                font-size: 1.75rem;
            }

            .add-class-btn {
                width: 100%;
                justify-content: center;
            }

            .classes-stats {
                flex-direction: column;
            }

            .stat-item {
                min-width: 100%;
            }

            .classes-table thead {
                display: none;
            }

            .classes-table tbody tr {
                display: flex;
                flex-direction: column;
                gap: 1rem;
                padding: 1.5rem;
                border: 1px solid #e2e8f0;
                border-radius: 12px;
                margin-bottom: 1rem;
                background: #ffffff;
            }

            .classes-table tbody td {
                padding: 0;
                border: none;
            }

            .action-buttons {
                width: 100%;
            }

            .btn-action {
                flex: 1;
                justify-content: center;
            }
        }
    </style>

    <div class="classes-wrapper">
        <div class="classes-hero">
            <div class="classes-header">
                <div>
                    <h1 class="classes-title">Mes Classes</h1>
                    <p class="classes-subtitle">Gérez vos classes et suivez vos élèves</p>
                </div>
                <a href="{{ path('teacher_group_add') }}" class="add-class-btn">
                    <i class="bi bi-plus-circle"></i>
                    Ajouter une Classe
                </a>
            </div>
        </div>

        <div class="classes-card">
            {% if groups|length > 0 %}
                <div class="classes-stats">
                    <div class="stat-item">
                        <div class="stat-item-icon classes-icon">
                            <i class="bi bi-journal-bookmark"></i>
                        </div>
                        <div class="stat-item-content">
                            <div class="stat-item-label">Total Classes</div>
                            <div class="stat-item-value">{{ groups|length }}</div>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-item-icon students-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="stat-item-content">
                            <div class="stat-item-label">Total Élèves</div>
                            <div class="stat-item-value">
                                {% set totalStudents = 0 %}
                                {% for group in groups %}
                                    {% set totalStudents = totalStudents + group.students|length %}
                                {% endfor %}
                                {{ totalStudents }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="classes-table-wrapper">
                    <table class="classes-table">
                        <thead>
                        <tr>
                            <th>Classe</th>
                            <th>Nombre d'Élèves</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for group in groups %}
                            <tr>
                                <td>
                                    <div class="class-name">
                                        <div class="class-icon">
                                            {{ group.name|first|upper }}
                                        </div>
                                        <span class="class-name-text">{{ group.name }}</span>
                                    </div>
                                </td>
                                <td>
                                        <span class="student-count-badge">
                                            <i class="bi bi-people-fill"></i>
                                            {{ group.students|length }} élève{{ group.students|length > 1 ? 's' : '' }}
                                        </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="{{ path('teacher_my_students', {'group': group.id}) }}" class="btn-action view">
                                            <i class="bi bi-eye"></i>
                                            Voir les Élèves
                                        </a>
                                        <a href="{{ path('teacher_group_edit', {'id': group.id}) }}" class="btn-action edit">
                                            <i class="bi bi-pencil"></i>
                                            Modifier
                                        </a>
                                        <form method="post" action="{{ path('teacher_group_delete', {'id': group.id}) }}" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_group' ~ group.id) }}">
                                            <button type="submit" class="btn-action delete" onclick="return confirm('⚠️ Êtes-vous sûr de vouloir supprimer cette classe ?\n\nCette action est irréversible.');">
                                                <i class="bi bi-trash"></i>
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-journal-bookmark"></i>
                    </div>
                    <h2 class="empty-state-title">Aucune Classe Assignée</h2>
                    <p class="empty-state-text">Commencez par créer votre première classe pour gérer vos élèves</p>
                    <a href="{{ path('teacher_group_add') }}" class="empty-state-btn">
                        <i class="bi bi-plus-circle"></i>
                        Créer ma Première Classe
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
